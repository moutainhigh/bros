
// 头部样式
.header-box
    position: relative
    z-index: 90
    width: 100%
    border-top: 5px solid #148fcc
    border-bottom: 1px solid #ececec
    background: #fff
    -moz-box-shadow: 0 6px 10px rgba(0, 0, 0, .2)
    -webkit-box-shadow: 0 6px 10px rgba(0, 0, 0, .2)
    box-shadow: 0 6px 10px rgba(0, 0, 0, .2)
    .header-bar-box
        height: 39px
        border: #ececec solid 1px
        .header-bar
            position: relative
            width: 1000px
            height: 39px
            margin: 0 auto
            .header-bar-btn
                position: absolute
                top: 5px
                right: 0
                height: 29px
                border-left: 1px #ececec solid
                li
                    float: left
                    padding: 0 15px
                    height: 29px
                    border-right: 1px #ececec solid
                    line-height: 29px
                    vertical-align: middle
                    i
                        padding-right: 8px
                a
                    text-decoration: none
            .message
                line-height: 38px
                span
                    padding-right: 10px
                i
                    padding-right: 5px
    .header
        position: relative
        width: 1000px
        height: 110px
        margin: 0 auto
        
        .link
            position: absolute
            top: 35px
            right: 0
            height: 20px
            li
                float: left
                height: 20px
                padding: 0 15px 0 5px
                border-radius(10px)
                transition(.5s)
                &:hover
                    background-color #f00
                    transition(.5s)
                    a
                        color #fff
                        transition(.5s)
                        i
                            color #fff
                            transition(.5s)   
                a
                    line-height: 20px
                    color: #58585a
                    text-decoration: none
                    transition(.5s) 
                    &:hover
                        text-decoration: none
                    i
                        float: left
                        display: inline-block
                        width: 20px
                        height: 20px
                        font-size: 12px
                        line-height: 20px
                        color: #148fcc
                        transition(.5s) 
                          
        .logo
            position: absolute
            width: 170px
            height: 50px
            top: 10px
            background: url(../assets/img/logo.png) center center no-repeat
        .header-nav
