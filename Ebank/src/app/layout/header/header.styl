// 头部购物车
.top-car
    position: absolute
    top: 18px
    right: 0
    .top-car-btn
        position: absolute
        right: 0
        padding-top: 8px
        z-index: 10
        width: 140px
        height: 40px
        border: #148fcc 1px solid
        text-align: center
        cursor: pointer
        -moz-border-radius: 5px
        -webkit-border-radius: 5px
        border-radius: 5px
        b
            padding: 0 5px
            color: #148fcc
        *
            display: inline-block
            vertical-align: middle
        i
            color: #148fcc
            font-size: 12px
        .glyphicon-shopping-cart
            font-size 16px
            padding-right 4px
    .top-car-box
        display: none
        position: absolute
        right: 0
        top: 49px
        z-index: 1
        padding: 15px
        width: 460px
        border: #148fcc 1px solid
        background: #fff
        -moz-border-radius: 5px 0 5px 5px
        -webkit-border-radius: 5px 0 5px 5px
        border-radius: 5px 0 5px 5px
        .top-car-title
            padding: 0 0 10px 0
            border-bottom: 1px #e2e2e2 dotted
            font-weight: bold
        .top-car-list
            height 240px
            overflow-y auto
            width: 100%
            padding-right 15px
            .list
                display: inline-block
                padding: 10px 0
                width: 95%
                border-bottom: 1px #e2e2e2 dotted
                .ico
                    float: left
                    width: 28px
                    height: 28px
                    text-align: center
                    color: #148fcc
                    line-height: 26px
                    border: 2px solid #148fcc
                    -moz-border-radius: 14px
                    -webkit-border-radius: 14px
                    border-radius:14px
                    i
                        font-size: 14px
                .money
                    float: right
                    text-align: right
                    font-size: 12px
                    line-height: 18px
                    .tool
                        color: #148fcc
                        cursor: pointer
                .title
                    float: left
                    width: 260px
                    padding-left: 10px
                    font-size: 12px
        .top-car-info
            float: left
            width: 100%
            padding-top: 10px
            .top-car-total
                float: left
                line-height: 34px
                b
                    padding: 0 3px
                span
                    padding-right: 15px
            .top-car-info-btn
                float: right
    .top-car-btn-open
        height: 50px
        -moz-border-radius: 5px 5px 0 0
        -webkit-border-radius: 5px 5px 0 0
        border-radius: 5px 5px 0 0
        border-bottom: 0
        background: #fff





















