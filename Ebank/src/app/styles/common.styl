//头部导航栏样式
.icon-bar
    position:fixed
    bottom:90px
    right:10px
    width:40px
    height:200px
    z-index:999
    .icon-contain
        float:left
        position:relative
        width:40px
        height:40px
        margin-bottom:5px
        background-color:#fff
        cursor:pointer
        overflow:hidden
        border:1px solid $grayBorder
        &:hover
            .icon-group
                top:-40px
    .icon-group
        position:absolute
        top:0px
        width:40px
        height:40px
        transition:top .5s ease
    .icon
        width:40px
        height:40px
        background-size:22px 22px
        background-repeat:no-repeat
        background-position:center center
    .icon-tips
        width:40px
        height:40px
        position:absolute
        top:41px
        background:$blueButton
        color:#fff
        font-size:12px
        padding:3px 5px
        text-align:center
        line-height:16px
    .glyphicon-arrow-right
        line-height: 29px
        font-size: 17px
    .icon-bangzhuzhongxin
        bg-image('home/iconfont-bangzhuzhongxin.png')
    .icon-qudaoqushiduibifenxi
        background-image:url('/assets/img/home/iconfont-qudaoqushiduibifenxi.png')
    .icon-weibiaoti2
        background-image:url('/assets/img/home/iconfont-weibiaoti2.png')
    .icon-xiangshang
        background-image:url('/assets/img/home/iconfont-xiangshang.png')
    .icon-yijianfankui
        background-image:url('/assets/img/home/iconfont-yijianfankui.png')
        background-size:25px 25px
    .icon-shoppingcart
        background-image:url('/assets/img/home/shopping_cart.png')
    .btn-group
        .btn
            padding: 11px 12px
            border-top: none
            border-color: $grayBorder
            border-radius: 0px !important
            color: $blue
            background: $lightBlue
        .btn-content
