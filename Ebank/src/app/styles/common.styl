// 带标题的步骤条
.titile-step
    position relative
    height 80px
    .step
        position absolute
        top 20px
        right 0
        height 30px
        line-height 50px
        span
            padding 0 0px 0 5px
            color #aaa
            &.finish
                color #00d500
                i
                    border #00d500 2px solid
                    background #00d500
                    color #fff
            &.current
                color #148ecd
                i
                    border #148ecd 2px solid
                    background #148ecd
                    color #fff
            i
                float left
                width 30px
                height 30px
                margin 0 5px 0 20px
                border #bbbbbb 2px solid
                background #fff
                moz-border-radius 15px
                -webkit-border-radius 15px
                border-radius 15px
                line-height 28px
                text-align center
                font-style normal
                color #aaa
                font-weight bold
    .title
        position absolute
        left 0
        top 20px
        height 50px
        line-height 50px
        font-size 22px
.titile-step .step i, .titile-step .step span
        display inline-block
        height 30px
        line-height 30px
        vertical-align middle

