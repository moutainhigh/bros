.product-detail-box
    padding 10px
    .product-detail-img
        float left
        width 350px
        height 250px
        img
            width 350px
            height 250px
    .product-detail-info
        float left
        width 570px
        padding-bottom 10px
        border-bottom  1px solid #f5f5f5
        span
            padding-right 10px
            width 160px
            display inline-block
            text-align right
        .title
            font-size 22px
        .big-font
            font-size 32px
            color $orange
            i
                font-size 12px
        li
            padding-bottom 15px
        .product-title
            font-size 20px
    .product-detail-input
        float left
        li
            width 100%
            display block
            padding 16px 0px 0px 0px
        .form-control
            display inline-block
            width 200px
            margin 0 5px 0 0
        .title
            display inline-block
            width 160px
            padding-right 10px
            text-align right
.product-detail-list
    .product-detail-content
        line-height 180%

        p
            padding-bottom 15px
        b
            font-size 16px